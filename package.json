{
	"name": "pre-flight-vscode",
	"displayName": "Pre-Flight",
	"description": "Allows you to build procedures and prerequisites which Code will automatically parse and guide you through. This will allow for rudimentary tasks - too complex/meticulous to be automated - to be easier and quicker to follow.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.valuePrompter",
				"title": "Enter Pre-Flight to execute"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "pre-flight",
					"title": "Pre-Flight",
       				"icon": "res/checklist.svg"
				}
			]
		},
		"views": {
			"pre-flight": [
				{
					"id": "pre-flights-explorer",
					"name": "Pre-Flights Explorer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"chai": "^4.2.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.0-next.0"
	}
}
